
{% block modalcontent %}
<form method="post" action="{{ path('addComment', {'slug': article.slug}) }}">
    <h1>Ajout d'un commentaire</h1>
    <div>
        <div class="row">
            <div class="input-field col s6">
                <textarea id="appbundle_comment_content" type="text" name="appbundle_comment[content]" class="materialize-textarea"></textarea>
                <label for="appbundle_comment_content">votre commentaire</label>
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md-6">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i>
                Enregistrer
            </button>
        </div>
    </div>
    {{ form_widget(form._token) }}

</form>
{% endblock %}
