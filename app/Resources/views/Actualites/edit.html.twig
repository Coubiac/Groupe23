{% extends "layout.html.twig" %}
{% block content %}
    <div class="container">
    <h1>Modification d'un article</h1>
    <hr>

    {% block app_body %}
        <div class="well">


            {{ tinymce_init() }}
            {% form_theme formEdit 'bootstrap_3_layout.html.twig' %}
            {{ form_start(formEdit) }}
            {{ form_errors(formEdit) }}

            {% if form.date is defined %}
                {{ form_label(formEdit.date, "Date de publication") }}
                {{ form_errors(formEdit.date) }}
                <div>
                    {{ form_widget(formEdit.date) }}
                </div>
            {% endif %}


            <div>
                {{ form_label(formEdit.title, "Titre")}}
                {{ form_errors(formEdit.title) }}

                <div>
                    {{ form_widget(formEdit.title) }}
                </div>
            </div>

            <div>
                {{ form_label(formEdit.content, "Contenu") }}
                {{ form_errors(formEdit.content) }}
                <div>
                    {{ form_widget(formEdit.content) }}
                </div>
            </div>



            {% if formEdit.published is defined %}
                {{ form_row(formEdit.published) }}
            {% endif %}

            {{ form_rest(formEdit) }}

            <div class="row">
                <div class="col-md-6">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i>
                        Enregistrer
                    </button>
                </div>
            </div>



            {{ form_end(formEdit) }}
        </div>
    {% endblock %}
    </div>
{% endblock %}

