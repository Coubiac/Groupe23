{% extends "layout.html.twig" %}
{% block content %}
    <div class="container">
        <h1>Modifier l'image </h1>
        <hr>

        {% block app_body %}

            <div class="well">

                {% form_theme formImageEdit 'bootstrap_3_layout.html.twig' %}
                {{ form_start(formImageEdit) }}
                {{ form_errors(formImageEdit) }}

                <div>
                    {% if article.image is not null %}
                        <p>Image actuelle</p>
                        <p> <img style="width:400px;" src="{{ asset(article.image) }}"/></p>
                        {{ form_label(formImageEdit.image, "Nouvelle image")}}

                    {% else %}
                        <p>Cet article ne contient pas encore d'image.</p>
                        {{ form_label(formImageEdit.image, "Ajouter une image")}}
                    {% endif %}

                    {{ form_errors(formImageEdit.image) }}
                    {{ form_widget(formImageEdit.image) }}
                </div>


                {{ form_rest(formImageEdit) }}

                <div class="row">
                    <div class="col-md-6">
                        <a class="btn btn-default pull-left" id="Retour" href="{{ path('view_article', { 'slug': article.slug }) }}" role="button">Retour</a>
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i>
                            Enregistrer
                        </button>
                    </div>
                </div>

                {{ form_end(formImageEdit) }}
            </div>
        {% endblock %}
    </div>
{% endblock %}
