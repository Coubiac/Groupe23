
<div class="well">


    {{ tinymce_init() }}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    {% if form.date is defined %}
        {{ form_label(form.date, "Date de publication") }}
        {{ form_errors(form.date) }}
        {{ form_widget(form.date) }}
    {% endif %}


    <div>
        {{ form_label(form.title, "Titre")}}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
    </div>

    <div>
        {{ form_label(form.imageFile) }}
        {{ form_widget(form.imageFile, {'attr': {'class': 'filestyle','data-placeholder': 'Photo d\'illustration', 'data-buttonName': 'btn-primary', 'data-buttonText': 'Parcourir'}}) }}
        {{ form_errors(form.imageFile) }}
    </div>



    <div>
        {{ form_label(form.content, "Contenu") }}
        {{ form_errors(form.content) }}
        {{ form_widget(form.content) }}
    </div>



    {% if form.published is defined %}
        {{ form_row(form.published) }}
    {% endif %}

    {{ form_rest(form) }}

    <div class="row">
        <div class="col-md-6">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i>
                Enregistrer
            </button>

        </div>
    </div>

    {{ form_end(form) }}
</div>
