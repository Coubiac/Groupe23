{% trans_default_domain 'FOSUserBundle' %}
{# On étend notre layout #}
{% extends 'layout.html.twig' %}
{% block content %}
    {% block fos_user_content %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

<form class="col-lg-4 form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">


    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label for="username" class="control-label">Nom d'utilisateur :</label>
        <input type="text" tabindex="1" placeholder="Utilisateur" id="username" name="_username" value="{{ last_username }}" class="form-control"  required="required">
    </div>

    <div class="form-group">
        <label for="password" class="control-label">Mot de passe :</label>
        <input type="password" tabindex="2" id="password" name="_password" placeholder="Mot de passe" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label><a href="#" tabindex="5">Mot de passe oublié ?</a></label>
    </div>


    <footer>
        <label><input type="checkbox" tabindex="3" id="remember_me" name="_remember_me" value="on">Se souvenir de moi</label>
        <input type="submit" class="btn" value="Connexion" tabindex="4" id="_submit">
        <p>
            Pas encore de compte ?
            <a href="{{ path('fos_user_registration_register') }}">Créer un compte</a>
        </p>
    </footer>
</form>



{% endblock fos_user_content %}
{% endblock%}
