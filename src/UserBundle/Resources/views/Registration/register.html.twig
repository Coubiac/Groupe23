{% extends "layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    {% block fos_user_content %}
        <form enctype="multipart/form-data" action="{{ path('fos_user_registration_register') }}" method="POST" class="col-lg-4 form-horizontal">

            <div id="fos_user_registration_form">

                <div class="form-group">
                    <label for="fos_user_registration_form_email" class="control-label">Email :</label>
                    {{ form_widget(form.email, { 'attr': {'placeholder': 'nom@domain.com', 'tabindex': '1', 'class': 'form-control'} }) }}
                    {{ form_errors(form.email) }}
                </div>

                <div class="form-group">
                    <label for="fos_user_registration_form_username" class="control-label">Nom d'utilisateur :</label>
                    {{ form_widget(form.username, { 'attr': {'placeholder': 'nom d\'utilisateur', 'tabindex': '2', 'class': 'form-control'} }) }}
                    {{ form_errors(form.username) }}
                </div>

                <div class="form-group">
                    <label for="fos_user_registration_form_plainPassword_first" class="control-label">Mot de passe :</label>
                    {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Mot de passe', 'tabindex': '3', 'class': 'form-control'} }) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>

                <div class="form-group">
                    <label for="fos_user_registration_form_plainPassword_second" class="control-label">Confirmation de mot de passe :</label>
                    {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Confirmation du mot de passe', 'tabindex': '4', 'class': 'form-control'} }) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>

                <footer>
                    {{ form_rest(form) }}
                    <input class="btn" type="submit" value="{{ 'Enregistrer' }}" tabindex="5">
                </footer>
            </div>
        </form>

    {% endblock fos_user_content %}
{% endblock%}


