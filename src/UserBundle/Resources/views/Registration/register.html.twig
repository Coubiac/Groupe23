{% extends "layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

    <h1>Formulaire d'inscription</h1>

    <div id="fos_user_registration_form">

        {{ form_start(form, { 'action': path('fos_user_registration_register'), 'attr': { 'class': 'fos_user_registration_register col-lg-4 form-horizontal' } }) }}

            <p>Les champs marqués d'une * sont obligatoires.</p>

            <div class="form-group">
                <label for="fos_user_registration_form_email" class="control-label">Email* :</label>
                {{ form_widget(form.email, { 'attr': {'placeholder': 'nom@domain.com', 'class': 'form-control'} }) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_username" class="control-label">Nom d'utilisateur* :</label>
                {{ form_widget(form.username, { 'attr': {'placeholder': 'nom d\'utilisateur', 'class': 'form-control'} }) }}
                {{ form_errors(form.username) }}
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_plainPassword_first" class="control-label">Mot de passe* :</label>
                {{ form_widget(form.plainPassword.first, { 'attr': {'placeholder': 'Mot de passe', 'class': 'form-control'} }) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>

            <div class="form-group">
                <label for="fos_user_registration_form_plainPassword_second" class="control-label">Confirmation de mot de passe* :</label>
                {{ form_widget(form.plainPassword.second, { 'attr': {'placeholder': 'Confirmation du mot de passe', 'class': 'form-control'} }) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lastName, "Nom* :") }}

                {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Votre nom', 'class': 'form-control'} }) }}
                {{ form_errors(form.lastName) }}
            </div>

            <div class="form-group">
                {{ form_label(form.firstName, "Prénom* :") }}

                {{ form_widget(form.firstName, { 'attr': {'placeholder': 'Votre prénom', 'class': 'form-control'} }) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div class="form-group">
                {{ form_label(form.codePostal, "Code Postal* :") }}

                {{ form_widget(form.codePostal, { 'attr': {'placeholder': 'Votre code postal', 'class': 'form-control'} }) }}
                {{ form_errors(form.codePostal) }}
            </div>

            <div class="form-group">
                {{ form_label(form.town, "Ville* :") }}

                {{ form_widget(form.town, { 'attr': {'placeholder': 'Votre ville', 'class': 'form-control'} }) }}
                {{ form_errors(form.town) }}
            </div>

            <div class="form-group formbirthday">
                {{ form_label(form.birthDate, "Date de naissance :") }}

                {{ form_widget(form.birthDate) }}
                {{ form_errors(form.birthDate) }}
            </div>

            {{ form_rest(form) }}
            <div class="form-group">
                <input class="btn" type="submit" value="{{ 'Enregistrer' }}">
            </div>

        {{ form_end(form) }}
    </div>

{% endblock%}


